extends includes/_template

block title
	| Авторизація

block main
	main.main
		section.section.authorization
			.container
				h2.authorization__h2 Авторизація
				.authorization__box
					form.form-authorization.form-identification-your-class(method="POST")
						label.cart__label
							.cart__info-text E-mail:
								|
								|
								span.cart__info-required *
							input.input.cart__input(type="email" maxlength="100" name="email" required)
							.cart__info-error Це поле заповнене невірно
						label.cart__label
							.cart__info-text Пароль:
								|
								|
								span.cart__info-required *
							input.input.cart__input(type="password" maxlength="200" name="password" required)
							.cart__info-error Це поле заповнене невірно
						a.authorization__forgot(href="forgot.html") Забули пароль?
						button.button.button_big.mt-3(type="submit") Увійти
					.authorization__reg Ще немає акаунта?
						|
						|
						a.authorization__link(href="registration.html") Зареєструйтеся!